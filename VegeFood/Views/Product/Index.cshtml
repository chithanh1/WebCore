@using VegeFood.Models.SQLModel;
@model IEnumerable<Product>
@{
    List<Category> categoryList = ViewBag.CategoryList;
    ViewData["Title"] = "Products";
}

<partial name="/Views/Materials/_Slider.cshtml" view-data="ViewData"/>

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 mb-5 text-center">
                <ul class="product-category">
                    <li><a href="#" class="active">All</a></li>
                    @foreach (Category item in categoryList)
                    {
                        <li><a href="#">@item.Name</a></li>
                    }
                </ul>
            </div>
        </div>
        <div class="row">
            @foreach (Product item in Model)
            {
                <div class="col-md-6 col-lg-3 ftco-animate">
                    <div class="product">
                        <a href="/shop/detail/@item.Id" class="img-prod">
                            <img class="img-fluid" src="@item.Image" alt="Colorlib Template">
                            @if (item.Sale > 0)
                            {
                                <span class="status">@item.Sale%</span>
                            }
                            <div class="overlay"></div>
                        </a>
                        <div class="text py-3 pb-4 px-3 text-center">
                            <h3><a href="#">@item.Name</a></h3>
                            <div class="d-flex">
                                <div class="pricing">
                                    <p class="price">
                                        @if (item.Sale > 0)
                                        {
                                            int salePrice = item.Sale * item.Price / 100;
                                            <span class="mr-2 price-dc">$@item.Price</span>
                                            <span class="price-sale">$@salePrice</span>
                                        }
                                        else
                                        {
                                            <span class="price">$@item.Price</span>
                                        }
                                    </p>
                                </div>
                            </div>
                            <div class="bottom-area d-flex px-3">
                                <div class="m-auto d-flex">
                                    <a href="#" class="add-to-cart d-flex justify-content-center align-items-center text-center">
                                        <span><i class="ion-ios-menu"></i></span>
                                    </a>
                                    <a href="#" class="buy-now d-flex justify-content-center align-items-center mx-1">
                                        <span><i class="ion-ios-cart"></i></span>
                                    </a>
                                    <a href="#" class="heart d-flex justify-content-center align-items-center ">
                                        <span><i class="ion-ios-heart"></i></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row mt-5">
            <div class="col text-center">
                <div class="block-27">
                    <ul>
                        <li><a href="#">&lt;</a></li>
                        <li class="active"><span>1</span></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li><a href="#">&gt;</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>