@using VegeFood.Models 
@model ErrorViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>VegeFood | Error</title>
</head>
<body>
    <h1 class="text-danger">Error</h1>
    <h2 class="text-danger">An error occurred in @ViewData["Url"]</h2>

    @if (Model.ShowRequestId)
    {
        <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
        <p><strong>Message: @ViewData["Message"]</strong></p>
    }
</body>
</html>
