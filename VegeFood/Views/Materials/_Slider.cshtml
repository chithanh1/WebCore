@{ 
    string imageUrl = (string)ViewData["Image"] ?? "/images/common/bg_1.jpg";
}

<div class="hero-wrap hero-bread" style="background-image: url(@imageUrl);">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs">
                    <span class="mr-2"><a asp-controller="Home" asp-action="Index">Home</a></span>
                    <span>@ViewData["Title"]</span>
                </p>
                <h1 class="mb-0 bread">@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
</div>
